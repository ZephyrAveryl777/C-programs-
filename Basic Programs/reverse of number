using System;

 class HelloWorld
{
     static void Main(string[] args)
    {
        int num,rev=0,digit;
        Console.Write("Enter the number: ");
        num=Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("the entered number: "+ num);
        while(num!=0)
        {
            digit=num%10;
            rev=(rev*10)+digit; //
            num=num/10;
        
        }
        
        Console.WriteLine("the reverse of number: "+rev);
        
        
    }
}
